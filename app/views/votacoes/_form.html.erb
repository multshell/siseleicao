<h1 class="page-header">Votação</h1>

<% if @votacao.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @votacao.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="panel panel-default">
<div class="panel-heading">
    <%= action %>
</div>
<!-- /.panel-heading -->
<div class="panel-body">
    <div class="col-lg-6">
        <%= form_for(@votacao) do |f| %>
            <div class="form-group">
                <label>Eleicao</label>
                <%= f.text_field :eleicao_id, autofocus: true, class: "form-control", readonly: "", placeholder: "Numero de votos do Candidato"  %>
            </div>
            <div class="form-group">
                <label>Urna</label>
                <%= f.text_field :urna_id, autofocus: true, class: "form-control", readonly: "", placeholder: "Numero de votos do Candidato"  %>
            </div>
            <div class="form-group">
                <label>Candidato</label>
                <%= f.collection_select :candidato_id, @candidato_options_for_select, :id, :nome_campanha, {:prompt => true}, { class: "form-control", autofocus: true } %>
            </div>
            <div class="form-group">
                <label>Votos</label>
                <%= f.text_field :votos, autofocus: true, class: "form-control", placeholder: "Numero de votos do Candidato"  %>
            </div>
            <button type="submit" class="btn btn-default">Salvar</button>
            <%= link_to apuracao_urna_path(@votacao.urna_id), class: "btn btn-default" do %>
                Voltar
            <% end %>
        <% end %>
    </div>
    
</div>
    <!-- /.panel-body -->
</div>
