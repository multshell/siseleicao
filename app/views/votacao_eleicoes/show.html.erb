<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Resultado da Eleição</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <center><b>Identificação</b></center>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <tr>
                        <th class="info" width="150">Descriçao</th>
                        <td colspan="3"><%= @eleicao.descricao %></td>
                    </tr>
                    <tr>
                        <th class="info">Numero de Urnas</th>
                        <td colspan="3"><%= @eleicao.urnas.size %></td>
                    </tr>
                    <tr>
                        <th class="info">Numero de Candidatos</th>
                        <td colspan="3"><%= @eleicao.candidatos.size - 2 %></td>
                    </tr>
                    <tr>
                        <th class="info">Numero de Eleitores</th>
                        <td colspan="3"><%= number_with_delimiter(@eleicao.numeroeleitores, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info">Comparecimento</th>
                        <td colspan="3"><%= number_with_delimiter(@votosapurados, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info">Faltosos</th>
                        <td colspan="3"><%= number_with_delimiter(@faltosos, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info">Situação Eleição</th>
                        <td colspan="3">
                            <% if @eleicao.urnas.size == @eleicao.urnas.where("finalizada = true").size %>
                                Apurada
                            <% else %>    
                                Em Apuração
                            <% end %>
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <center><b>Resultado da Votação</b></center>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <thead>
                        <tr class="info">
                            <th>Nome do Candidato</th>
                            <th>Nro Candidato</th>
                            <th>Votos</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @votacoes.each do |votacao| %>
                            <tr>
                                <% #if votacao.candidato.numero != "98" and votacao.candidato.numero != "99" %>
                                <td><%= votacao['candidato_numero'] %></td>
                                <td><%= votacao['candidato_nome'] %></td>
                                <td><%= number_with_delimiter(votacao['candidato_votos'], delimiter: ".") %></td>
                                <% #end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <table class="table table-bordered">
                    <tr>
                        <th class="info" width="500" style="text-align: right">Votos Válidos</th>
                        <td style="text-align: right"><%= number_with_delimiter(@validos, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info" width="500" style="text-align: right">Brancos</th>
                        <td style="text-align: right"><%= number_with_delimiter(@brancos, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info" width="500" style="text-align: right">Nulos</th>
                        <td style="text-align: right"><%= number_with_delimiter(@nulos, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info" width="500" style="text-align: right">Total de votos</th>
                        <td style="text-align: right"><%= number_with_delimiter(@votosapurados, delimiter: ".") %></td>
                    </tr>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>