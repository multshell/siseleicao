<h1 class="page-header">Apuração por Eleição</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Eleições
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div>
                <table id="votacaoeleicao" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Descrição</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @eleicoes.each do |eleicao| %>
                            <%# if eleicao.urnas.size == eleicao.urnas.where("finalizada = true").size %>
                                <tr>
                                    <td><%= eleicao.descricao %></td>
                                    <td width="50">
                                    <div class="pull-right">
                                        <%= link_to votacao_eleicao_path(eleicao), class: "btn btn-primary btn-xs" do %>
                                            <i class="fa fa-edit"></i>
                                        <% end %>
                                    </div>
                                </td>
                                </tr>
                            <%# end %>
                        <% end %>
                    </tbody>
                </table>
                
            </div>
            <!-- /.table-responsive -->
        </div>
            <!-- /.panel-body -->
    </div>    