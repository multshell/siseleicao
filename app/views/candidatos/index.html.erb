<h1 class="page-header">Candidatos</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Candidatos
            <% if policy(@candidatos).new? %>
                <%= link_to new_candidato_path, class: "btn btn-success btn-sm pull-right", style: "margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% else %>
                <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-sm pull-right", style:"margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div>
                <table id="candidatos" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Nome de Campanha</th>
                            <th>Eleição</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @candidatos.each do |candidato| %>
                        <tr>
                            <td><%= candidato.numero %></td>
                            <td><%= candidato.nome_campanha %></td>
                            <td><%= candidato.eleicao.descricao %></td>
                            <td width="50">
                                <div class="pull-right">
                                    <%= link_to candidato_path(candidato), class: "btn btn-primary btn-xs" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <% if policy(@candidatos).destroy? %>
                                        <%= link_to candidato_path(candidato),
                                                method: :delete,
                                                class: "btn btn-danger btn-xs",
                                                data: {confirm: "Você deseja realmente excluir (<b>#{candidato.nome_campanha}</b>)?"} do %>
                                            <i class="fa fa-minus"></i>
                                        <% end %>
                                    <% else %>
                                        <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-xs" do %>
                                            <i class="fa fa-minus"></i>
                                        <% end %>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                
            </div>
            <!-- /.table-responsive -->
        </div>
            <!-- /.panel-body -->
    </div>    