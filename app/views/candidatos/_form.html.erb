<h1 class="page-header">Candidatos</h1>

<% if @candidato.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @candidato.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="panel panel-default">
<div class="panel-heading">
    <%= action %>
</div>
<!-- /.panel-heading -->
<div class="panel-body">
    <div class="col-lg-6">
        <%= form_for(@candidato) do |f| %>
            <div class="form-group">
                <label>Eleição</label>
                <%= f.collection_select :eleicao_id, @eleicao_options_for_select, :id, :descricao, {}, { class: "form-control", autofocus: true } %>
            </div>
            <div class="form-group">
                <label>Numero</label>
                <%= f.text_field :numero, autofocus: true, class: "form-control", placeholder: "Numero do Candidato"  %>
            </div>
            <div class="form-group">
                <label>Nome de Campanha</label>
                <%= f.text_field :nome_campanha, class: "form-control", placeholder: "Nome de Campanha do Candidato"  %>
            </div>
            <div class="form-group">
                <label>Nome Completo</label>
                <%= f.text_field :nome_completo, class: "form-control", placeholder: "Nome Completo do Candidato"  %>
            </div>
            <button type="submit" class="btn btn-default">Salvar</button>
            <%= link_to candidatos_path, class: "btn btn-default" do %>
                Voltar
            <% end %>
        <% end %>
    </div>
    
</div>
    <!-- /.panel-body -->
</div>
