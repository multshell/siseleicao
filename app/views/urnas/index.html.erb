<h1 class="page-header">Urnas</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Urnas
            <% if policy(@urnas).new? %>
                <%= link_to new_urna_path, class: "btn btn-success btn-sm pull-right", style: "margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% else %>
                <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-sm pull-right", style:"margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div>
                <table id="urnas" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Local de Votação</th>
                            <th>Localidade</th>
                            <th>Numero das Seções</th>
                            <th>Total de Eleitores</th>
                            <th>Eleição</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @urnas.each do |urna| %>
                        <tr>
                            <td><%= urna.numero %></td>
                            <td><%= urna.escola %></td>
                            <td><%= urna.localidade %></td>
                            <td><%= urna.secoes %></td>
                            <td><%= urna.eleitores %></td>
                            <td><%= urna.eleicao.descricao %></td>
                            <td width="50">
                                <div class="pull-right">
                                    <%= link_to urna_path(urna), class: "btn btn-primary btn-xs" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <% if policy(@urnas).destroy? %>
                                        <%= link_to urna_path(urna),
                                                method: :delete,
                                                class: "btn btn-danger btn-xs",
                                                data: {confirm: "Você deseja realmente excluir (<b>#{urna.id} - #{urna.escola}</b>)?"} do %>
                                            <i class="fa fa-minus"></i>
                                        <% end %>
                                    <% else %>
                                        <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-xs" do %>
                                            <i class="fa fa-minus"></i>
                                        <% end %>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                
            </div>
            <!-- /.table-responsive -->
        </div>
            <!-- /.panel-body -->
    </div>    