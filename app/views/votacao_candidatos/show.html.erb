<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Votação do Candidato</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <center><b>Identificação</b></center>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <tr>
                        <th class="info" width="150">Numero</th>
                        <td colspan="3"><%= @candidato.numero %></td>
                    </tr>
                    <tr>
                        <th class="info">Nome Campanha</th>
                        <td colspan="3"><%= @candidato.nome_campanha %></td>
                    </tr>
                    <tr>
                        <th class="info">Nome Completo</th>
                        <td colspan="3"><%= @candidato.nome_completo %></td>
                    </tr>
                    <tr>
                        <th class="info">Eleição</th>
                        <td colspan="3"><%= @candidato.eleicao.descricao %></td>
                    </tr>
                    <tr>
                        <th class="info">Situação Eleição</th>
                        <td colspan="3">
                            <% if @eleicao.urnas.size == @eleicao.urnas.where("finalizada = true").size %>
                                Apurada
                            <% else %>    
                                Em Apuração
                            <% end %>
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <center><b>Votação por Urna</b></center>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <thead>
                        <tr class="info">
                            <th>Urna</th>
                            <th>Local de Votação</th>
                            <th>Situação da Urna</th>
                            <th>Votos</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @votacoescandidato.each do |votacao| %>
                            <tr>
                                <% #if votacao.candidato.numero != "98" and votacao.candidato.numero != "99" %>
                                <td><%= votacao.urna.numero %></td>
                                <td><%= votacao.urna.escola %></td>
                                <td>
                                    <% if votacao.urna.finalizada %>
                                    Apurada
                                    <% end %>
                                </td>
                                <td><%= number_with_delimiter(votacao.votos, delimiter: ".") %></td>
                                <% #end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <table class="table table-bordered">
                    <tr>
                        <th class="info" width="500" style="text-align: right">Total de votos</th>
                        <td style="text-align: right"><%= number_with_delimiter(@totalvotos, delimiter: ".") %></td>
                    </tr>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>