<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Boletim de Urna</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <center><b>Identificação</b></center>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <tr>
                        <th class="info" width="150">Numero da Urna</th>
                        <td colspan="3"><%= @urna.numero %></td>
                    </tr>
                    <tr>
                        <th class="info">Local de Votação</th>
                        <td colspan="3"><%= @urna.escola %></td>
                    </tr>
                    <tr>
                        <th class="info">Localidade</th>
                        <td colspan="3"><%= @urna.localidade %></td>
                    </tr>
                    <tr>
                        <th class="info">Seções</th>
                        <td colspan="3"><%= @urna.secoes %></td>
                    </tr>
                    <tr>
                        <th class="info">Eleição</th>
                        <td colspan="3"><%= @urna.eleicao.descricao %></td>
                    </tr>
                    <tr>
                        <th class="info">Aptos</th>
                        <td width="200"><%= number_with_delimiter(@urna.eleitores, delimiter: ".") %></td>
                        <th class="info" width="150">Comparecimento</th>
                        <td><%= number_with_delimiter(@votosapurados, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info">Faltosos</th>
                        <td><%= number_with_delimiter(@faltosos, delimiter: ".") %></td>
                        <th class="info">Situação da Urna</th>
                        <td>
                            <% if @urna.finalizada %>
                                Apurada
                            <% else %>
                                Em Apuração
                            <% end %>
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <center><b>Resultado da Votação</b></center>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <thead>
                        <tr class="info">
                            <th>Nome do Candidato</th>
                            <th>Nro Candidato</th>
                            <th>Votos</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @votacoes.each do |votacao| %>
                            <tr>
                                <% if votacao.candidato.numero != "98" and votacao.candidato.numero != "99" %>
                                <td><%= votacao.candidato.nome_campanha %></td>
                                <td><%= votacao.candidato.numero %></td>
                                <td><%= number_with_delimiter(votacao.votos, delimiter: ".") %></td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <table class="table table-bordered">
                    <tr>
                        <th class="info" width="500" style="text-align: right">Total de votos nominais</th>
                        <td style="text-align: right"><%= number_with_delimiter(@nominais, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info" style="text-align: right">Brancos</th>
                        <td style="text-align: right"><%= number_with_delimiter(@votosbrancos, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info" style="text-align: right">Nulos</th>
                        <td style="text-align: right"><%= number_with_delimiter(@votosnulos, delimiter: ".") %></td>
                    </tr>
                    <tr>
                        <th class="info" style="text-align: right">Total apurado</th>
                        <td style="text-align: right"><%= number_with_delimiter(@votosapurados, delimiter: ".") %></td>
                    </tr>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>