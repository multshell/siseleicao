<h1 class="page-header">Modalidades</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Listando Modalidades
        <% if policy(@modalidades).new? %>
            <%= link_to new_modalidade_path, class: "btn btn-success btn-sm pull-right", style: "margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        <% else %>
            <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-sm pull-right", style:"margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div>
            <table id="modalidades" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descrição</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @modalidades.each do |modalidade| %>
                    <tr>
                        <td><%= modalidade.id %></td>
                        <td><%= modalidade.descricao %></td>
                        <td width="50">
                            <div class="pull-right">
                                <% if policy(@modalidades).edit? %>
                                    <%= link_to edit_modalidade_path(modalidade), class: "btn btn-primary btn-xs" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-primary btn-xs" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                <% end %>
                                <% if policy(@modalidades).destroy? and modalidade.contratos.length == 0 %>
                                    <%= link_to modalidade_path(modalidade),
                                            method: :delete,
                                            class: "btn btn-danger btn-xs",
                                            data: {confirm: "Você deseja realmente excluir (<b>#{modalidade.descricao}</b>)?"} do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-xs" do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% end %>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
        <!-- /.panel-body -->
</div>

