<h1 class="page-header">Eleição</h1>

<div class="panel panel-default">
<!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-12">
            <div class="col-lg-12">
                <div class="form-group">
                    <h3><label>Descrição:</label>
                    <%= @eleicao.descricao %></h3>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Numero de Urnas:</label>
                    <p class="form-control-static">
                        <%= number_with_delimiter(@eleicao.numerournas, delimiter: ".") %>
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Numero de Eleitores:</label>
                    <p class="form-control-static">
                        <%= number_with_delimiter(@eleicao.numeroeleitores, delimiter: ".") %>
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Numero de Candidatos:</label>
                    <p class="form-control-static">
                        <%= number_with_delimiter(@eleicao.numerocandidatos, delimiter: ".") %>
                    </p>
                </div>
            </div>
            <div class="col-lg-12">
                <% if policy(@eleicao).edit? %>
                    <%= link_to edit_eleicao_path(@eleicao), class: "btn btn-primary" do %>
                        Editar
                    <% end %>
                <% else %>
                    <%= link_to '#', disabled: 'disabled', class: "btn btn-primary" do %>
                        Editar
                    <% end %>
                <% end %>
                <%= link_to eleicoes_path, class: "btn btn-default" do %>
                    Voltar
                <% end %>
            </div>
        </div>
        
    </div>
    <!-- /.panel-body -->
</div>
