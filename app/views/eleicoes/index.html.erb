<h1 class="page-header">Eleições</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Eleições
            <% if policy(@eleicoes).new? %>
                <%= link_to new_eleicao_path, class: "btn btn-success btn-sm pull-right", style: "margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% else %>
                <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-sm pull-right", style:"margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div>
                <table id="eleicoes" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Descrição</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @eleicoes.each do |eleicao| %>
                        <tr>
                            <td><%= eleicao.id %></td>
                            <td><%= eleicao.descricao %></td>
                            <td width="50">
                                <div class="pull-right">
                                    <%= link_to eleicao_path(eleicao), class: "btn btn-primary btn-xs" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <% if policy(@eleicoes).destroy? %>
                                        <%= link_to eleicao_path(eleicao),
                                                method: :delete,
                                                class: "btn btn-danger btn-xs",
                                                data: {confirm: "Você deseja realmente excluir (<b>#{eleicao.descricao}</b>)?"} do %>
                                            <i class="fa fa-minus"></i>
                                        <% end %>
                                    <% else %>
                                        <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-xs" do %>
                                            <i class="fa fa-minus"></i>
                                        <% end %>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                
            </div>
            <!-- /.table-responsive -->
        </div>
            <!-- /.panel-body -->
    </div>    